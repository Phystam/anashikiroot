#ifndef TARTEASYTIMER_HH
#define TARTEASYTIMER_HH

#include "TString.h"
#include "TDatime.h"

class TArtEasyTimer{
public:

  TArtEasyTimer(){
    fstarttime = new TDatime();
  }

  ~TArtEasyTimer(){
  }

  friend std::ostream & operator << (std::ostream& out, const TArtEasyTimer& timer){
    fnowtime = new TDatime();
    ftdiff = timer.fstarttime->Convert();
    out << "Time: " 
	<< Form("%02d",ftdiff/3600) 
	<< ":" << Form("%02d",ftdiff/60) 
	<< ":" <<Form("%02d",ftdiff%60)
	<< std::flush;
  }


private:

  TDatime* fstarttime;
  TDatime* fnowtime;
  Int_t ftdiff;
};
